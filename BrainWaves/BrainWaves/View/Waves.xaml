<Page x:Class="BrainWaves.View.Waves"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BrainWaves.View"
      xmlns:vm="clr-namespace:BrainWaves.ViewModel"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="400" 
      Title="Waves">
    <Page.DataContext>
        <vm:WavesViewModel/>
    </Page.DataContext>
    
    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource SlideIn}"/>
        </EventTrigger>
    </Page.Triggers>
    
    <Page.RenderTransform>
        <TranslateTransform/>
    </Page.RenderTransform>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
            <!-- 헤더 섹션 -->
            <materialDesign:Card Grid.Row="0" 
                                 Padding="24"
                                 Margin="0,0,0,16"
                                 materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel>
                    <TextBlock Text="{Binding Resonance, StringFormat='{}{0:F2} Hz'}" 
                               Style="{StaticResource FrequencyText}"
                               HorizontalAlignment="Center"/>
                    
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0">
                        <materialDesign:Chip Content="{Binding WaveType}"
                                             Background="{DynamicResource PrimaryHueMidBrush}"
                                             Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                                             Margin="0,0,8,0"/>
                        <materialDesign:Chip Content="{Binding WaveDescription}"
                                             Background="{DynamicResource SecondaryHueMidBrush}"
                                             Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
        
            <!-- 웨이브 컨트롤 섹션 -->
            <StackPanel Grid.Row="1">
                <!-- Left Wave 컨트롤 -->
                <materialDesign:Card Style="{StaticResource MaterialCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="LEFT WAVE" 
                                   Style="{StaticResource MaterialDesignOverlineTextBlock}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                        
                        <Grid Grid.Row="1" Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" 
                                    Style="{StaticResource CircularButton}"
                                    Command="{Binding DecreaseLeftFrequencyCommand}"
                                    ToolTip="Decrease frequency">
                                <materialDesign:PackIcon Kind="Minus" Width="24" Height="24"/>
                            </Button>
                            
                            <StackPanel Grid.Column="1" 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <TextBlock Text="{Binding LeftFrequency, StringFormat='{}{0:F2}'}" 
                                           Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Hz" 
                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           HorizontalAlignment="Center"
                                           Opacity="0.6"/>
                            </StackPanel>
                            
                            <Button Grid.Column="2" 
                                    Style="{StaticResource CircularButton}"
                                    Command="{Binding IncreaseLeftFrequencyCommand}"
                                    ToolTip="Increase frequency">
                                <materialDesign:PackIcon Kind="Plus" Width="24" Height="24"/>
                            </Button>
                        </Grid>
                        
                        <Slider Grid.Row="2"
                                Value="{Binding LeftFrequency, Mode=TwoWay}" 
                                Minimum="20"
                                Maximum="500"
                                TickFrequency="10"
                                TickPlacement="None"
                                Margin="0,0,0,16"/>
                        
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <materialDesign:PackIcon Grid.Column="0" 
                                                     Kind="VolumeHigh" 
                                                     VerticalAlignment="Center"
                                                     Opacity="0.6"
                                                     Margin="0,0,16,0"/>
                            
                            <Slider Grid.Column="1" 
                                    Value="{Binding LeftGain, Mode=TwoWay}" 
                                    Maximum="100"
                                    VerticalAlignment="Center"/>
                            
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding LeftGain, StringFormat='{}{0:F0}%'}" 
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       VerticalAlignment="Center"
                                       MinWidth="40"
                                       TextAlignment="Right"
                                       Margin="16,0,0,0"/>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
                
                <!-- Right Wave 컨트롤 -->
                <materialDesign:Card Style="{StaticResource MaterialCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="RIGHT WAVE" 
                                   Style="{StaticResource MaterialDesignOverlineTextBlock}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                        
                        <Grid Grid.Row="1" Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" 
                                    Style="{StaticResource CircularButton}"
                                    Command="{Binding DecreaseRightFrequencyCommand}"
                                    ToolTip="Decrease frequency">
                                <materialDesign:PackIcon Kind="Minus" Width="24" Height="24"/>
                            </Button>
                            
                            <StackPanel Grid.Column="1" 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <TextBlock Text="{Binding RightFrequency, StringFormat='{}{0:F2}'}" 
                                           Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Hz" 
                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           HorizontalAlignment="Center"
                                           Opacity="0.6"/>
                            </StackPanel>
                            
                            <Button Grid.Column="2" 
                                    Style="{StaticResource CircularButton}"
                                    Command="{Binding IncreaseRightFrequencyCommand}"
                                    ToolTip="Increase frequency">
                                <materialDesign:PackIcon Kind="Plus" Width="24" Height="24"/>
                            </Button>
                        </Grid>
                        
                        <Slider Grid.Row="2"
                                Value="{Binding RightFrequency, Mode=TwoWay}" 
                                Minimum="20"
                                Maximum="500"
                                TickFrequency="10"
                                TickPlacement="None"
                                Margin="0,0,0,16"/>
                        
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <materialDesign:PackIcon Grid.Column="0" 
                                                     Kind="VolumeHigh" 
                                                     VerticalAlignment="Center"
                                                     Opacity="0.6"
                                                     Margin="0,0,16,0"/>
                            
                            <Slider Grid.Column="1" 
                                    Value="{Binding RightGain, Mode=TwoWay}" 
                                    Maximum="100"
                                    VerticalAlignment="Center"/>
                            
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding RightGain, StringFormat='{}{0:F0}%'}" 
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       VerticalAlignment="Center"
                                       MinWidth="40"
                                       TextAlignment="Right"
                                       Margin="16,0,0,0"/>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </StackPanel>
        
            <!-- 컨트롤 버튼 -->
            <Grid Grid.Row="2" Margin="0,16,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" 
                        Style="{StaticResource PlayButton}"
                        Command="{Binding TogglePlayCommand}"
                        materialDesign:ElevationAssist.Elevation="Dp6">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="{Binding PlayButtonIcon}" 
                                                 Width="20" 
                                                 Height="20"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding PlayButtonText}" 
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="2" 
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        Command="{Binding ShowTimerCommand}"
                        Height="48"
                        materialDesign:ButtonAssist.CornerRadius="24">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Timer" 
                                                 Width="20" 
                                                 Height="20"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Timer" 
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>