<Window x:Class="BrainWaves.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainWaves"
        xmlns:vm="clr-namespace:BrainWaves.ViewModel"
        mc:Ignorable="d"
        Title="BrainWaves - Binaural Beat Generator" 
        Height="750" Width="450"
        MinHeight="750" MinWidth="400"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 메인 컨텐츠 프레임 -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundBrush}">
            <Frame Source="{Binding ShowingPageName}" 
                   NavigationUIVisibility="Hidden"/>
        </Border>
        
        <!-- 하단 네비게이션 바 -->
        <Border Grid.Row="1" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource SurfaceBrush}"
                BorderThickness="0,1,0,0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" 
                                  BlurRadius="10" 
                                  Direction="90"
                                  Color="Black" 
                                  Opacity="0.3"/>
            </Border.Effect>
            
            <Grid Height="70">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Button Command="{Binding NavigateFrameCommand}" 
                        CommandParameter="pack://application:,,,/View/Waves.xaml"
                        Grid.Column="0" 
                        Style="{StaticResource NavButton}">
                    <StackPanel>
                        <Path Data="M2,12 C2,12 4,6 8,6 C12,6 14,12 14,12 C14,12 16,18 20,18 C24,18 26,12 26,12" 
                              Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                              StrokeThickness="2" 
                              Width="26" 
                              Height="24"
                              Stretch="Uniform"/>
                        <TextBlock Text="Waves" FontSize="12" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding NavigateFrameCommand}" 
                        CommandParameter="pack://application:,,,/View/Presets.xaml"
                        Grid.Column="1" 
                        Style="{StaticResource NavButton}">
                    <StackPanel>
                        <Path Data="M12,3 L12,13 M9,6 L15,6 M8,9 L16,9 M7,12 L17,12 M6,15 L18,15 M5,18 C5,19.66 6.34,21 8,21 L16,21 C17.66,21 19,19.66 19,18 L19,15" 
                              Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                              StrokeThickness="2" 
                              Fill="Transparent"
                              Width="24" 
                              Height="24"
                              Stretch="Uniform"/>
                        <TextBlock Text="Presets" FontSize="12" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding NavigateFrameCommand}" 
                        CommandParameter="pack://application:,,,/View/Settings.xaml"
                        Grid.Column="2" 
                        Style="{StaticResource NavButton}">
                    <StackPanel>
                        <Path Data="M12,15.5 C10.07,15.5 8.5,13.93 8.5,12 C8.5,10.07 10.07,8.5 12,8.5 C13.93,8.5 15.5,10.07 15.5,12 C15.5,13.93 13.93,15.5 12,15.5 M19.43,12.97 C19.47,12.65 19.5,12.33 19.5,12 C19.5,11.67 19.47,11.34 19.43,11.03 L21.54,9.37 C21.73,9.22 21.78,8.95 21.66,8.73 L19.66,5.27 C19.54,5.05 19.27,4.96 19.05,5.05 L16.56,6.05 C16.04,5.66 15.5,5.32 14.87,5.07 L14.5,2.42 C14.46,2.18 14.25,2 14,2 L10,2 C9.75,2 9.54,2.18 9.5,2.42 L9.13,5.07 C8.5,5.32 7.96,5.66 7.44,6.05 L4.95,5.05 C4.73,4.96 4.46,5.05 4.34,5.27 L2.34,8.73 C2.21,8.95 2.27,9.22 2.46,9.37 L4.57,11.03 C4.53,11.34 4.5,11.67 4.5,12 C4.5,12.33 4.53,12.65 4.57,12.97 L2.46,14.63 C2.27,14.78 2.21,15.05 2.34,15.27 L4.34,18.73 C4.46,18.95 4.73,19.03 4.95,18.95 L7.44,17.94 C7.96,18.34 8.5,18.68 9.13,18.93 L9.5,21.58 C9.54,21.82 9.75,22 10,22 L14,22 C14.25,22 14.46,21.82 14.5,21.58 L14.87,18.93 C15.5,18.67 16.04,18.34 16.56,17.94 L19.05,18.95 C19.27,19.03 19.54,18.95 19.66,18.73 L21.66,15.27 C21.78,15.05 21.73,14.78 21.54,14.63 L19.43,12.97 Z" 
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                              Width="24" 
                              Height="24"
                              Stretch="Uniform"/>
                        <TextBlock Text="Settings" FontSize="12" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>